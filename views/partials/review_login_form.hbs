<div class="card-body">
    <div class="alert alert-danger" role="alert">
        <strong>You must be logged in to submit a review.</strong>
    </div>
<form id="inPageLogin" name="login" method="post" action="/login/ReviewPage">
	<div class="form-group">
		<label for="email">Email Address</label>
		<input class="text form-control" name="email" type="text" />
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input class="form-control" name="password" type="password" />
	</div>
	<input class="btn btn-success mb-2" type="submit" value="Log In" />
</form>

<p>
	<a href="/forgot">Forgot Password?</a>
</p>
<p>Don't have an account? Click
	<a href="/register">here</a> to create one.</p>

{{#if message}}
<div class="alert alert-danger" role="alert">
	<strong>{{message}}</strong>
</div>
{{/if}}
</div>
