{{!-- Swap out header based on whether user is logged in or not --}}
{{#if loggedin}}
{{> header_loggedin}}
{{else}}
{{> header}}
{{/if}}

{{!-- Display form for new user registration --}}
<div class="container">
  <h3>Register on Rotten Potatoes>></h3>
  <p id="message">{{message}}</p>
  <p>Submitting the form below will allow you to review games and add missing games.</p>
<form class="form-horizontal" action="/register" method="POST" id="register">
  <fieldset>
    <div class="control-group">
      <!-- First Name -->
      <label class="control-label"  for="firstname">First Name</label>
      <div class="controls">
        <input type="text" id="firstname" name="firstname" placeholder="" class="form-control">
        <small class="form-text help-block">First name help text.</small>
      </div>
    </div>

    <div class="control-group">
      <!-- Last Name -->
      <label class="control-label"  for="lastname">Last Name</label>
      <div class="controls">
        <input type="text" id="lastname" name="lastname" placeholder="" class="form-control">
        <small class="form-text help-block">Last name help text.</small>
      </div>
    </div>
 
    <div class="control-group">
      <!-- E-mail -->
      <label class="control-label" for="email">E-mail</label>
      <div class="controls">
        <input type="text" id="email" name="email" placeholder="" class="form-control">
        <small class="form-text help-block">Please provide your E-mail.</small>
      </div>
    </div>
 
    <div class="control-group">
      <!-- Password-->
      <label class="control-label" for="password">Password</label>
      <div class="controls">
        <input type="password" id="password" name="password" placeholder="" class="form-control">
        <small class="form-text help-block">Password should be at least 4 characters.</small>
      </div>
    </div>
 
    <div class="control-group">
      <!-- Password -->
      <label class="control-label"  for="password_confirm">Password (Confirm)</label>
      <div class="controls">
        <input type="password" id="password_confirm" name="password_confirm" placeholder="" class="form-control">
        <small class="form-text help-block">Please confirm password.</small>
      </div>
    </div>
 
    <div class="control-group">
      <!-- Button -->
      <div class="controls">
        <button class="btn btn-success">Register</button>
      </div>
    </div>
  </fieldset>
</form>
</div>